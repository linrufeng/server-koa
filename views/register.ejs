<%- include('./include/header')%>
    <title><%= title%></title>
</head>
<body>
    <div class="h2box">
       <h2><%= title%></h2>
    </div>
    
    <div class="formbox">
        <form onsubmit="return false">
            <div class="form-group">
              <label for="exampleInputEmail1">Email address</label>
              <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">验证码</label><button type="submit" class="btn btn-danger" id="get-code">获取验证码</button>
                <input type="number" class="form-control" id="exampleInputEmail1" placeholder="code">
              </div>
            <div class="form-group">
              <label for="exampleInputEmail1">name</label>
              <input type="text" class="form-control" id="nameinput" placeholder="name">
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Password</label>
              <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>            
            <button type="submit" class="btn btn-danger" id="register">注册</button>
          
          </form>
          
    </div>
    <script src="/jq.js"></script>
    <script>
      $('#get-code').on('click',function(){
          var email = $("#exampleInputEmail1").val()
          $.ajax({
              url: '/getcode',
              method:'post',
              data: {
                email:email
              },
              success: function (res) {
                console.log(res)
              },
              error: function(err) {
                  console.log(err)
              }
            })
      })
        $("#register").on('click', function () {
            var email = $("#exampleInputEmail1").val()
            var name = $("#nameinput").val()
            var password = $("#exampleInputPassword1").val()
            var data = {
              "email": email,
              "name": name,
              "password": password
            }
            console.log(data)
            $.ajax({
              url: '/register',
              method:'post',
              data: data,
              success: function (res) {
                console.log(res)
              },
              error: function(err) {
                  console.log(err)
              }
            })
        })
    </script>
</body>
</html>